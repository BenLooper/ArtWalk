<%=form_with model:@post do |f|%>

  <div class="form-group">
    <%=f.label :image_url, class: "col-md-4 control-label"%>
    <%=f.text_field :image_url, class: "form-control"%>

  <div class="form-group">
      <%=f.label :description, class: "col-md-4 control-label"%>
      <%=f.text_field :description, class: "form-control"%>
  </div>

<div>
    <%=f.collection_select :genre_id, Genre.all, :id, :style%>
    <%=f.submit "Create Post", class: "btn btn-default btn-primary"%>
</div>
<%end%>