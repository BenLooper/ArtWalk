<body class="body">
<div class="content">
<img src='<%=@post.image_url%>' alt="Random Image">

<%=form_with model:@comment do |f|%>

  <div class="form-group">
  <%=f.text_field :content%>
  </div>

<div class="form-group">
  <%=f.hidden_field :post_id, value:"#{@post.id}"%>
  <%=f.submit value:"Edit Comment", class: "btn btn-success"%>
</div>

 <%end%>
 </div>
 </body>