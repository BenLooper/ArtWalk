<h2>Backs</h2>

<%@user.backers.each do |backer|%>  
    <li><%=backer.username + " "%>backed you</li>
<%end%>

<%@user.backees.each do |backee|%>
    <li>You backed<%=" "%><%=backee.username%></li>
